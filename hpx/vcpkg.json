{
  "name": "hpx",
  "version": "1.8.0",
  "description": [
    "The C++ Standards Library for Concurrency and Parallelism",
    "HPX is a C++ Standards Library for Concurrency and Parallelism. It implements all of the corresponding facilities as defined by the C++ Standard. Additionally, in HPX we implement functionalities proposed as part of the ongoing C++ standardization process. We also extend the C++ Standard APIs to the distributed case."
  ],
  "homepage": "https://github.com/STEllAR-GROUP/hpx",
  "license": "BSL-1.0",
  "supports" : "!staticcrt",
  "dependencies": [
    "asio",
    "boost-accumulators",
    "boost-config",
    "boost-context",
    "boost-dynamic-bitset",
    "boost-exception",
    "boost-filesystem",
    "boost-iostreams",
    "boost-lockfree",
    "boost-range",
    "boost-spirit",
    "boost-system",
    "boost-throw-exception",
    "boost-variant",
    "boost-winapi",
    {
      "name": "gperftools",
      "platform": "linux"
    },
    {
      "name": "onetbb",
      "platform": "windows"
    },
    "hwloc",
    "mpi",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "default-features" : [
    "zlib",
    "snappy",
    "bzip2",
    "mpi"
  ],
  "features": {
    "zlib" : {
      "description": "Build with zlib compression",
      "dependencies": [ 
        "zlib"
      ]
    },
    "bzip2" : {
      "description": "Build with bzip2 compression",
      "dependencies": [ 
        "bzip2"
      ]
    },
    "snappy" : {
      "description": "Build with snappy compression",
      "dependencies": [ 
        "snappy"
      ]
    },
    "cuda" : {
      "description": "Build with CUDA support",
      "dependencies": [ 
        "cuda"
      ]
    },
    "jemalloc" : {
      "description": "Build with jemalloc instead of system malloc",
      "dependencies": [ 
        "jemalloc"
      ]
    },
    "mpi" : {
      "description": "Build with MPI parcelport",
      "dependencies": [ 
        "mpi"
      ]
    }
  }
}
